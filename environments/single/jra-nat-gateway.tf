# ---------------------------------------------------------------------------
# NAT EIP
# ---------------------------------------------------------------------------
resource "aws_eip" "az-1-public" {
	vpc = true
}
# ---------------------------------------------------------------------------
# NAT Gateway
# ---------------------------------------------------------------------------

resource "aws_nat_gateway" "az-1-public" {
    allocation_id = "${aws_eip.az-1-public.id}"
    subnet_id = "${aws_subnet.az-1-public.id}"
}

